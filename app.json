{
  "expo": {
    "name": "Audio Recorder App",
    "slug": "expo-record-audio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",  // Path to the app icon
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",  // Path to the splash screen image
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourusername.audiorecorderapp"
    },
    "android": {
      "package": "com.yourusername.audiorecorderapp",
      "permissions": [
        "RECORD_AUDIO"  // Permission for recording audio on Android
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "platforms": ["ios", "android", "web"]
  }
}
